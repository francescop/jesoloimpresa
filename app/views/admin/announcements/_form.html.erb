<%= form_for @item, :url  => options[:options], :html => { :multipart => true } do |form| %>

  <% if @item.errors.any? %>
  <div id="errorExplanation">
    <h3><%= pluralize(@item.errors.count, "error") %> prohibited this page from being saved:</h3>
    <ul>
    <% @item.errors.full_messages.each do |full_message| %>
      <li><%= full_message %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
   
   <div class="field">
	<%= form.label 'Categoria' %>
	<%= form.collection_select :announcementcategory_id, Announcementcategory.all, :id, :name, :prompt => true  %>
  </div>
  
  <div class="field">
    <%= form.label :comune %>
    <%= form.text_field :comune %>
  </div>
  
  <div class="field">
    <%= form.label :indirizzo %>
    <%= form.text_field :indirizzo %>
  </div>
  
  <div class="field">
    <%= form.label :titolo %>
    <%= form.text_field :titolo %>
  </div>
  
  <div class="field">
    <%= form.label 'Offro/Cerco' %>
	<%= radio_button("announcement", "offrocerco", "offro", :checked => true) %> <span>Offro</span>
 	<%= radio_button("announcement", "offrocerco", "cerco") %> <span>Cerco</span>
  </div>
  
  <div class="field">
    <%= form.label 'Descrizione:' %>
    <%= form.text_area :descrizione %>
  </div>

  <div class="field">
    <%= form.label 'Email:' %>
    <%= form.text_field :email %>
  </div>
  
  <div class="field">
    <%= form.label 'Nome:' %>
    <%= form.text_field :nome %>
  </div>
  
  <div class="field">
    <%= form.label 'Telefono:' %>
    <%= form.text_field :telefono %>
  </div>
  
  <div class="field">
    <%= form.label 'Sito Web:' %>
    <%= form.text_field :sitoweb %>
  </div>
  
  <div class="field">
    <%= form.label 'Immagine Principale:' %>
    <%= form.file_field :image1 %>
  </div>
  
  <div class="field">
    <%= form.label 'Immagine 2:' %>
    <%= form.file_field :image2 %>
  </div>
  
  <div class="field">
    <%= form.label 'Immagine 3:' %>
    <%= form.file_field :image3 %>
  </div>

  <fieldset class="buttons">
    <ol>
      <li><%= submit_tag options[:button] , :class => "commit" %> or <%= link_to _t("Cancel and go back").downcase, :action => "index" %></li>
    </ol>
  </fieldset>

<% end %>
