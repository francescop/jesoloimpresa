<%= form_for @item, :url  => options[:options], :html => { :multipart => true } do |form| %>

  <% if @item.errors.any? %>
  <div id="errorExplanation">
    <h3><%= pluralize(@item.errors.count, "error") %> prohibited this page from being saved:</h3>
    <ul>
    <% @item.errors.full_messages.each do |full_message| %>
      <li><%= full_message %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <fieldset class="inputs">
    <%= form.label 'Nome' %><br />
    <%= form.text_field :name %>
  </fieldset>
  <fieldset class="inputs">
    <%= form.label :metatag %><br />
    <%= form.text_field :metatag %>
  </fieldset>
  <fieldset class="inputs">
    <%= form.label 'Descrizione' %><br />
    <%= form.text_area :description %>
  </fieldset>
  <fieldset class="inputs">
	<%= form.label :category_type, "Tipo:" %>
	<%= form.select :category_type, Category::CAT_TYPES, :prompt => "Select a category type" %>
  </fieldset>

  <fieldset class="buttons">
    <ol>
      <li><%= submit_tag options[:button] , :class => "commit" %> or <%= link_to _t("Cancel and go back").downcase, :action => "index" %></li>
    </ol>
  </fieldset>

<% end %>
