<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> ha proibito il salvataggio:</h2>

      <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Nome' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :metatag %><br />
    <%= f.text_field :metatag %>
  </div>
  <div class="field">
    <%= f.label 'Descrizione' %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
	<%= f.label :category_type, "Tipo:" %>
	<%= f.select :category_type, Category::CAT_TYPES, :prompt => "Select a category type" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
