<h1>Listing news</h1>

<% if admin? %>
<%= link_to 'New News', new_news_path %>
<% end %>

<div id="search-results">
	
	<div id="search-content">
	
		<div id="results">
			
			<% @news.each do |news| %>
			
														<div class="clearfix paid-listing result track-listing track-restaurant vcard">
												
												<div class="listing_content">
													<div class="info">
															
														<% if admin? %> 
															<%= link_to 'Edit News', edit_news_path(news) %> | 
															<%= link_to 'Destroy News', news, :confirm => 'Are you sure?', :controller => :news, :method => :delete %>
														<% end %>
														
														<h3 class="business-name fn org"><%= link_to news.title, news %></h3>
														<br />
															
													</div> <!-- /info -->
													
													<div class="rating">
																												
													</div> <!-- /rating -->
													
													<div class="what-where">
																					
													</div> <!-- /what-where -->
													
													
													
												</div> <!-- /listing_content -->
												
												
													<p class="image_block">
													
													</p>
											
												
											</div>
						
						<% end %>
			
			
		</div> <!-- /results -->
		
	</div> <!-- /search-content -->
	
</div> <!-- /search-results -->